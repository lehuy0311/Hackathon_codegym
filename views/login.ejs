<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
    href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
    rel="stylesheet"
    />
    <!-- MDB -->
    <link
    href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.css"
    rel="stylesheet"
    />
    <!-- MDB -->
    <script
    type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.js"
    ></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/loginstyle.css">
    <!-- JavaScript Bundle with Popper -->
    <title>LOGIN</title>
    <style>
      .gradient-custom {
        /* fallback for old browsers */
        background: #a18cd1;

        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(
          45deg,
          rgba(29, 236, 197, 0.6),
          rgba(91, 14, 214, 0.6) 100%
        );

        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(rgb(0, 140, 255, 0.6), rgb(247, 242, 242,0.6));
      }
    </style>
</head>
<body class="bg-image" style="
background-image: url('https://cdn.sanity.io/images/0vv8moc6/medec/17907949b2d1d0f89f9f012a9f5d5ecd1591e5e0-1500x996.jpg');
height: 100vh; ">
    <section class="vh-100 mask gradient-custom">
        <div class="container py-5 h-100" style="opacity: 0.8;">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
              <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
                  <div class="col-md-6 col-lg-6 d-none d-md-block">
                    <div class="d-flex align-items-center justify-content-center mt-5 pb-1">
                      <!-- <i class="fas fa-cubes fa-2x me-3" ></i> -->
                      <span class="h5 mb-0" >Welcome to medical website</span>
                    </div>
                    <img src="/images/h.jpg"
                      alt="login form" class="img-fluid" />
                    <!-- Nhét hình ảnh vào -->
                  </div>
                  <div class="col-md-6 col-lg-6 d-flex align-items-center" >
                    <div class="card-body p-4 p-lg-5 text-black" >

                      <!-- Form login nè -->
                      <form action="/controller/login" method="POST">

                        <div class="d-flex align-items-center mb-3 pb-1">
                          <!-- <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i> -->
                          <!-- <i class="fas fa-arrow-right-to-bracket fa-2x me-3" style="color: #0b8bed;"></i> -->
                          <LOGIN class="h1 fw-bold mb-0">DOCTOR WEB</span>
                        </div>

                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                        <!-- Username -->
                        <div class="form-outline mb-4">
                          <input type="text" id="username" class="form-control form-control-lg" name="user" required/>
                          <label class="form-label" for="username">Username</label>
                        </div>

                        <!-- Password -->
                        <div class="form-outline mb-4">
                          <input type="password" id="password" class="form-control form-control-lg" name="pass" required/>
                          <label class="form-label" for="password">Password</label>
                        </div>

                        <!-- Remember me, nhma ko biết nên bỏ ko-->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="RegisterCheck">
                            <label class="form-check-label" for="RegisterCheck">
                              Remember me
                            </label>
                        </div>

                        <div class="pt-1 mb-4">
                          <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                          <!-- <input class="btn btn-primary btn-lg btn-block" type="submit" value="Login"></input> -->
                        </div>

                        <a class="small text-muted" href="#!">Forgot password?</a>
                        <p class="mb-5 pb-lg-2" style="color: #393f81; ">Don't have an account?
                          <a href="#!" style="color: #00096a; letter-spacing: 1px; font-weight: bolder !important;" data-mdb-target="#registerModal" data-mdb-toggle="modal"
                          class="fw-normal mb-3 pb-3">Register here</a></p>
                        <a href="#!" class="small text-muted">Terms of use.</a>
                        <a href="#!" class="small text-muted">Privacy policy</a>
                      </form>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="resModalTit" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header justify-content-center">
              <h5 class="modal-title " id="resModalTit">Register</h5>
              <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="RegisterForm" action="/controller/register" method="POST">
                    <div class="VisibleSide">
                      <div class="form-outline mb-4">
                       <input type="email" class="form-control" id="emailRes" name="email" required></input>
                       <label for="emailRes" class="form-label">Email</label>
                      </div>
                      <div class="form-outline mb-4">
                        <input type="text" class="form-control" id="realNamelRes" name="name" required></input>
                        <label for="realNamelRes" class="form-label">Name (please enter your real name)</label>
                      </div>
                      <div class="mb-4">
                        <label class="form-label" for="customFile" style="margin: 0;">Image</label>
                        <input type="file" class="form-control" id="customFile" />
                      </div>
                      <div class="form-outline mb-4">
                        <input type="tel" class="form-control" id="phoneNumber" name="num" required>
                        <label for="phoneNumber" class="form-label" >Phone number</label>
                      </div>
                      <div class="form-outline mb-4">
                        <input type="text" class="form-control" id="usernameRes" name="user" required>
                        <label for="usernameRes" class="form-label">Username</label>
                      </div>
                      <div class="form-outline mb-4">
                        <input type="password" class="form-control" id="passwordRes" name="pass" required></input>
                        <label for="passwordRes" class="form-label">Password</label>
                      </div>
                      <div class="form-outline mb-4">
                          <input type="password" class="form-control" id="passwordAgain" name="again" required></input>
                          <label for="passwordAgain" class="form-label">Password Again</label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="DocCheck" name="DocCheck" data-mdb-toggle="collapse" aria-expanded="false" aria-controls="" data-mdb-target="#DoctorForm">
                        <label class="form-check-label" for="DocCheck"  aria-expanded="false" aria-controls="" data-mdb-target="#DoctorForm">
                          Register as a Doctor?
                        </label>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-mdb-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary" value="Submit"></input>
                      </div>
                    </div>
                    <div class="HiddenSide collapse collapse-horizontal" id="DoctorForm">
                        <div class="form-outline mb-4">
                          <input type="text" class="form-control" id="speciality" name="speciality" ></input>
                          <label for="speciality" class="form-label">Enter your speciality</label>
                        </div>
                        <div class="mb-4">
                          <label class="form-label" for="customFile" style="margin: 0;">Doctor Avatar</label>
                          <input type="file" class="form-control" id="customFile" />
                        </div>
                        <div class="mb-4">
                          <label class="col-form-label" >After completed register form, please wait for admins to authorize you as a doctor</label>
                        </div>
                    </div>
                </form>
            </div>

          </div>
        </div>
      </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      document.querySelectorAll('.form-outline').forEach((formOutline) => {
        new mdb.Input(formOutline).init();
      });

      document.querySelectorAll('.form-outline').forEach((formOutline) => {
        new mdb.Input(formOutline).update();
      });
    });
    </script>
  <script>
      document.addEventListener("DOMContentLoaded", function() {
        var elements = document.getElementsByTagName("INPUT");
        for (var i = 0; i < elements.length; i++) {
            elements[i].oninvalid = function(e) {
                e.target.setCustomValidity("");
                if (!e.target.validity.valid) {
                    e.target.setCustomValidity("This field is not enter correctly");
                }
            };
            elements[i].oninput = function(e) {
                e.target.setCustomValidity("");
            };
        }
      })
  </script>
  <script>
      var docInput =document.getElementById("DoctorForm").getElementsByTagName("input")
      var modal = document.getElementsByClassName("modal-content")[0];
     document.getElementById("DocCheck").onclick = function(e){
      if (this.checked){
        // hidden.style.display="block";
        modal.style.width="70%";
        for (var i=0;i<docInput.length;i++){
          docInput[i].setAttribute('required','');
        }
      }
      else{
        // hidden.style.display="none";
        modal.style.width="400px";
        for (var i=0;i<docInput.length;i++){
          docInput[i].removeAttribute('required');
        }
      }
    };
  </script>

</body>
</html>
