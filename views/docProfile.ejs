<title>Doctor Profile</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
<body>
<div class="container-xl px-4 mt-4">
    <img class="bg-img" src="https://cdn.sanity.io/images/0vv8moc6/medec/17907949b2d1d0f89f9f012a9f5d5ecd1591e5e0-1500x996.jpg" style="opacity: 0.3;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;">
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="/images/<%= doc.icon_image %> " alt="Doc Ava">
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Doctor Details</div>
                <div class="card-body">
                    <form>
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputUsername">Name</label>
                            <input class="form-control" id="inputUsername" type="text" readonly value="<%= doc.name %>">
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputEmailAddress">Email address</label>
                            <input class="form-control" id="inputEmailAddress" type="email" readonly value=<%= doc.email  %> >
                        </div>
                        <!-- Form Group (phone)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputPhone">Phone number</label>
                            <input class="form-control" id="inputPhone" type="tel" readonly value="<%= doc.phonenumber %>" >
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (tag)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputTag">Tag</label>
                                <input class="form-control" id="inputTag" type="text" readonly value='<%= doc.name_tag %>'>

                            </div>
                            <!-- Form Group (check)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputCheck">High Doctor</label>
                                <input class="form-control" id="inputCheck" type="text" name="check" readonly value='<%= doc.dr_high==1 ? "Check" : "No Check"%>' >
                            </div>
                            <!-- Form Group (rank)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputRank">Rank</label>
                                <input class="form-control" id="inputRank" type="text" name="rank" readonly value="<%= (doc.id_rank<11 && doc.id_rank>0) ? doc.name_rank : "No rank"  %>" >
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-xl-9" style="margin-left: 200px;">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">License</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <% console.log(doc); %>
                    <img src="/images/<%= doc.image_prove %> " alt="" width="600px" height="400px">
                </div>
            </div>
        </div>
        <!-- hiển thị list post -->
        <div class="list-post" style="height:auto; width:800px;margin-left: 200px;margin-top: 20px;">
          <% if(posts){ %>
            <% for(let post of posts) { %>
            <div class="posts" style="width: 600px;border-radius: 10px;background-color: white;margin-bottom:20px;">
                <div class="head" style="display: flex;border-radius: 10px;padding: 15px;background: white;align-items: center;justify-content: space-between;">
                    <div class="name-profile" style="display: flex;align-items: center;">
                        <img src="/images/<%= post.image_path %> " class="avatar" style="width: 40px;height: 40px;border-radius: 5px;border: 1px solid rgb(184, 184, 184);">
                        <div class="name-title" style="margin-left: 10px;">
                            <p id="time-post" style="color: gray;font-size: 14px;"><%= post.time %> </p>
                        </div>
                    </div>
                        <div class="icon" style="display: flex;">
                            <i class="fas fa-ellipsis-h svg" onclick="displayOpt()" style="height: 40px;width: 40px;border-radius: 50%;cursor: pointer;text-align: center;margin-top: 10px;"></i>
                            <div class="select-opt" id="select-opt" style="display:none;border:1px solid rgb(79, 79, 79);">
                                <div style="width:60px;height:20px;margin-bottom:5px;">
                                    <a href="/controller/editPost/<%= post.id_post %>" style="text-decoration: none;font-size:20px;padding:0 0 0px 10px;cursor:pointer;">Edit</a>
                                </div>
                                <div style="width:100%;height:1px;background-color:rgb(79, 79, 79);"></div>
                                <div style="width:60px;height:20px;margin-bottom:5px;">
                                    <a href="/controller/delPost/<%= post.id_post %>" style="text-decoration: none;font-size:20px;padding:0 0 0px 2px;cursor:pointer;">Delete</a>
                                </div>
                            </div>
                        </div>
                </div>
                <div class="body" style="padding: 0 15px 10px 15px;">
                    <a href="/controller/postDetail/<%= post.id_post %> " style="font-size: 30px;text-decoration:none;color:black;cursor:pointer;"><%= post.title %> </a>
                    <div class="btn-icon">
                        <div class="left-icon" style="display: flex;"><%= post.liked %></div>
                    </div>
                </div>
            </div>
            <% }} %>

        </div>
    </div>
</div>



